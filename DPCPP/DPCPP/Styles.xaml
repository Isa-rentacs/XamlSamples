<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DPCPP">

    <Style x:Key="UserControlStyle1" TargetType="local:UserControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:UserControl">
                    <StackPanel>
                        <ListView x:Name="TextBlock" ItemsSource="{Binding Path=Items}"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
